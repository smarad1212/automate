    <script>
        let progress = 0;
        const totalTasks = 7; // Adjust based on the number of tasks

        function updateProgress() {
            progress++;
            const percentage = (progress / totalTasks) * 100;
            document.getElementById('progress').style.width = percentage + '%';
            if (progress === totalTasks) {
                alert('כל הכבוד! סיימת את כל המשימות! 🎉');
            }
        }

        function checkAnswer(id, correctAnswer) {
            const userAnswer = document.getElementById(id).value.toLowerCase().replace(/\s/g, '');
            const feedback = document.getElementById(id + '-feedback');
            if (userAnswer === correctAnswer.toLowerCase().replace(/\s/g, '')) {
                feedback.textContent = 'נכון! כל הכבוד! 🎉';
                feedback.style.color = 'green';
            } else {
                feedback.textContent = 'לא מדויק. נסה שוב! 💪';
                feedback.style.color = 'red';
            }
            feedback.classList.remove('hidden');
            updateProgress();
        }

        function saveAnswer(id) {
            const answer = document.getElementById(id).value;
            console.log(`Answer saved for ${id}: ${answer}`);
            alert('התשובה נשמרה! 🌟');
            updateProgress();
        }

        function saveReflections() {
            const reflection1 = document.getElementById('reflection-q1').value;
            const reflection2 = document.getElementById('reflection-q2').value;
            console.log('Reflections saved:', reflection1, reflection2);
            alert('המחשבות שלך נשמרו! 🧠✨');
            updateProgress();
        }

        function uploadArt() {
            const file = document.getElementById('art-upload').files[0];
            if (file) {
                console.log(`File "${file.name}" uploaded to portfolio`);
                alert('הציור הועלה בהצלחה לתיק העבודות! 🎨🎊');
                updateProgress();
            } else {
                alert('אנא בחר קובץ להעלאה');
            }
        }
    </script>
